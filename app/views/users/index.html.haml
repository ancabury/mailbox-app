.page-header
  %h1 Listing users

%br
%br

.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Email
        %th
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td= link_to 'Show', user
          - if user.id == current_user.id
            %td= link_to 'Edit', edit_user_path(user)
            %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
          - else
            %td
            %td
